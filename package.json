{
  "name": "vue-components",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve-localhost": "vue-cli-service serve --host localhost",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "rxjs": "^6.4.0",
    "vue": "^2.5.22",
    "vue-router": "^3.0.1",
    "vue-rx": "^6.1.0",
    "vuex": "^3.1.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.4.0",
    "@vue/cli-plugin-eslint": "^3.4.0",
    "@vue/cli-service": "^3.4.0",
    "@vue/eslint-config-standard": "^4.0.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0",
    "fibers": "^3.1.1",
    "sass": "^1.16.0",
    "sass-loader": "^7.1.0",
    "standard": "^12.0.1",
    "vue-template-compiler": "^2.5.21"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/standard"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error",
            "log"
          ]
        }
      ],
      "no-empty": [
        "error",
        {
          "allowEmptyCatch": true
        }
      ],
      "space-before-function-paren": [
        "error",
        "always"
      ],
      "semi": [
        "error",
        "never"
      ],
      "vue/no-side-effects-in-computed-properties": true,
      "vue/script-indent": [
        "error",
        2,
        {
          "switchCase": 1,
          "baseIndent": 1
        }
      ],
      "vue/html-indent": [
        "error",
        2
      ],
      "vue/html-self-closing": "error"
    },
    "overrides": [
      {
        "files": [
          "*.vue"
        ],
        "rules": {
          "indent": "off"
        }
      }
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
